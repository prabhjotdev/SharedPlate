rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is in the household
    function isHouseholdMember(householdId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/households/$(householdId)) &&
        get(/databases/$(database)/documents/households/$(householdId)).data.members.hasAny([
          {"uid": request.auth.uid}
        ]);
    }

    // Check if the incoming data's householdId matches user's household
    function isCreatingForOwnHousehold() {
      return isHouseholdMember(request.resource.data.householdId);
    }

    // Check if the existing document belongs to user's household
    function belongsToUserHousehold() {
      return isHouseholdMember(resource.data.householdId);
    }

    // Households collection
    match /households/{householdId} {
      // Users need to read all households to find their own (or use query)
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() &&
        resource.data.members.hasAny([{"uid": request.auth.uid}]);
    }

    // Invite codes collection
    // Read: anyone can validate a code (needed for joining)
    // Create: only household members can create codes for their household
    // Update/Delete: only household members
    match /inviteCodes/{codeId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isHouseholdMember(request.resource.data.householdId);
      allow update, delete: if isAuthenticated() && belongsToUserHousehold();
    }

    // Shared recipes collection
    match /sharedRecipes/{recipeId} {
      allow read: if isAuthenticated() && belongsToUserHousehold();
      allow create: if isAuthenticated() && isCreatingForOwnHousehold();
      allow update, delete: if isAuthenticated() && belongsToUserHousehold();
    }

    // Shopping items collection
    match /shoppingItems/{itemId} {
      allow read: if isAuthenticated() && belongsToUserHousehold();
      allow create: if isAuthenticated() && isCreatingForOwnHousehold();
      allow update, delete: if isAuthenticated() && belongsToUserHousehold();
    }

    // Shopping categories collection (custom categories)
    match /shoppingCategories/{categoryId} {
      allow read: if isAuthenticated() && belongsToUserHousehold();
      allow create: if isAuthenticated() && isCreatingForOwnHousehold();
      allow update, delete: if isAuthenticated() && belongsToUserHousehold();
    }

    // Dietary filters collection (ingredients to avoid)
    match /dietaryFilters/{filterId} {
      allow read: if isAuthenticated() && belongsToUserHousehold();
      allow create: if isAuthenticated() && isCreatingForOwnHousehold();
      allow update, delete: if isAuthenticated() && belongsToUserHousehold();
    }

    // Recipe categories collection (custom categories for filtering)
    match /recipeCategories/{categoryId} {
      allow read: if isAuthenticated() && belongsToUserHousehold();
      allow create: if isAuthenticated() && isCreatingForOwnHousehold();
      allow delete: if isAuthenticated() && belongsToUserHousehold();
    }

    // Meal plan items collection (weekly meal planning)
    match /mealPlanItems/{itemId} {
      allow read: if isAuthenticated() && belongsToUserHousehold();
      allow create: if isAuthenticated() && isCreatingForOwnHousehold();
      allow delete: if isAuthenticated() && belongsToUserHousehold();
    }

    // Allowed users collection (for email allowlist)
    match /allowedUsers/{email} {
      allow read: if isAuthenticated();
    }
  }
}
