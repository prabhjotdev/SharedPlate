rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is in the household
    function isHouseholdMember(householdId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/households/$(householdId)) &&
        get(/databases/$(database)/documents/households/$(householdId)).data.members.hasAny([
          {"uid": request.auth.uid}
        ]);
    }

    // Households collection
    match /households/{householdId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() &&
        resource.data.members.hasAny([{"uid": request.auth.uid}]);
    }

    // Invite codes collection
    match /inviteCodes/{codeId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }

    // Shared recipes collection
    match /sharedRecipes/{recipeId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }

    // Shopping items collection
    match /shoppingItems/{itemId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }

    // Shopping categories collection (custom categories)
    match /shoppingCategories/{categoryId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }

    // Dietary filters collection (ingredients to avoid)
    match /dietaryFilters/{filterId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }

    // Recipe categories collection (custom categories for filtering)
    match /recipeCategories/{categoryId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Allowed users collection (for email allowlist)
    match /allowedUsers/{email} {
      allow read: if isAuthenticated();
    }
  }
}
